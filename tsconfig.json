{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "~router/*": ["server/router/*"],
      "~router": ["server/router"],
      "~pages/*": ["pages/*"],
      "~pages": ["pages"],
      "~server/*": ["server/*"],
      "~server": ["server"],
      "~static/*": ["public/static/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "out",
    "next.config.js",
    ".babelrc",
    "bundles",
    "coverage",
    "test/*",
    "blueprint-templates"
  ],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
